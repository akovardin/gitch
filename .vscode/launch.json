    "version": "0.2.0",
    "configurations": [
        {
            "name": "cmd/gitch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/gitch/",
            "envFile": "${workspaceFolder}/local.env",
            "cwd": "${workspaceFolder}",
            "args": [
                "--dir",
                "${workspaceFolder}/data",
                "--dev",
                "--http",
                "127.0.0.1:8081",
                "serve",
            ]
        }
    ]
}